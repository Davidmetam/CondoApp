<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE">

    <TextView
        android:id="@+id/tv_sos_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡ESTÁS EN EMERGENCIA!"
        android:textColor="#D32F2F"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona el botón para alertar a seguridad"
        android:textColor="#D32F2F"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sos_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send_sos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="SOS"
        android:textSize="48sp"
        android:textStyle="bold"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="100dp"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_send_sos"
        app:layout_constraintEnd_toEndOf="@+id/btn_send_sos"
        app:layout_constraintStart_toStartOf="@+id/btn_send_sos"
        app:layout_constraintTop_toTopOf="@+id/btn_send_sos"
        android:elevation="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
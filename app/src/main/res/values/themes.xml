<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CondoApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_blue_intenso</item>
        <item name="colorPrimaryVariant">@color/navy_blue_intenso</item>
        <item name="colorOnPrimary">@color/blanco_puro</item>
        <item name="colorSecondary">@color/verde_esmeralda</item>
        <item name="colorSecondaryVariant">@color/verde_esmeralda</item>
        <item name="colorOnSecondary">@color/blanco_puro</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/gris_claro_suave</item>
    </style>

    <style name="EstiloTextoTitulo">
        <item name="android:textColor">@color/navy_blue_intenso</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EstiloTextoSubtitulo">
        <item name="android:textColor">@color/gris_texto_secundario</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>